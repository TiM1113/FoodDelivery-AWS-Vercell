{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret",
        "AWS_ACCESS_KEY_ID": "@aws_access_key_id",
        "AWS_SECRET_ACCESS_KEY": "@aws_secret_access_key",
        "AWS_REGION": "@aws_region",
        "AWS_BUCKET_NAME": "@aws_bucket_name",
        "FRONTEND_URL": "@frontend_url",
        "ADMIN_URL": "@admin_url"
    }
}